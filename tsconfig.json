{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "Preserve",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		"checkJs": true,

		"moduleResolution": "bundler",
		"noEmit": true,

		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,

		"types": ["bun-types"]
	},
	"include": ["src/**/*.js", "src/**/*.d.ts", "tests/**/*.js", "benchmarks/**/*.js"],
	"exclude": ["node_modules", "build", "src/files"]
}
